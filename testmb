function [CR, CI] = VariableClustering_MB_Constraint(Population)
% VariableClustering_MB_Constraint:
% Classifies decision variables into
% Constraint-Related (CR) and Constraint-Independent (CI)
% using Markov Blanket analysis

    %% Step 1: Extract decision, objective, and constraint data
    X = Population.decs;   % N x D decision variables
    Y = Population.objs;   % N x M objectives
    G = Population.cons;   % N x K constraints

    [N, D] = size(X);
    K = size(G, 2);

    %% Step 2: Compute overall constraint violation (CV)
    % PlatEMO convention: violation = max(0, g)
    CV = sum(max(0, G), 2);   % N x 1

    %% Step 3: Normalize CV (for numerical stability)
    CVmin = min(CV);
    CVmax = max(CV);
    CVnorm = (CV - CVmin) ./ (CVmax - CVmin + eps);

    %% Step 4: Generate surrogate constraint labels
    % Focus on highly feasible vs highly infeasible solutions
    cv_thresh = prctile(CVnorm, [30 70]);

    cv_mask = (CVnorm <= cv_thresh(1)) | (CVnorm >= cv_thresh(2));
    cv_label = double(CVnorm(cv_mask) >= cv_thresh(2));  % 1 = infeasible

    X_cv = X(cv_mask, :);

    %% Step 5: Markov Blanket analysis w.r.t. constraint violation
    % MBAnalysis expects [X | label]
    cv_MB = MBAnalysis([X_cv, cv_label], D);

    CR = unique(cv_MB);         % Constraint-related variables
    all_vars = 1:D;
    CI = setdiff(all_vars, CR); % Constraint-independent variables

end





function UMB= MBAnalysis(Population,D)

% 'dis' represents discrete data, 'con' denotes continues data 
data_type='con';     

% Name of algorithm
alg_name='STMB';     %IAMB  %GS   %interIAMB %FBED


 %alg_name='GS'; alg_name='IAMB'; alg_name='interIAMB'; alg_name='IAMBnPC';
 %alg_name='interIAMBnPC'; alg_name='FastIAMB'; alg_name='FBED'; alg_name='EAMB'; alg_name='MMMB'; alg_name='HITONMB';
 %alg_name='PCMB'; alg_name='IPCMB'; alg_name='MBOR'; alg_name='STMB'; alg_name='BAMB'; alg_name='EEMB';  alg_name='MBFS'; alg_name='CFS_MI';       


% Significance level
alpha=0.05;

% Index of target node. If it is global structure learning, this parameter is not needed
target = D + 1;   


data = Population;
% Causal_Learner
[Result,~,~] = Causal_Learner(alg_name,data,data_type,alpha,target);


UMB =Result;

end

% Markov blanket learning 
% Result1 is learned target's Markov blanket.
% Result2 is the number of conditional independence tests
% Result3 is running time
